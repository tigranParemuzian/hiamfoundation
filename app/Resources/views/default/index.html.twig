{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">

        //        window.onload(.play());

        document.body.onload = function (ev) {
            document.querySelector('.song').play()
        };

        var today = new Date();
        var startDate = new Date(today.getFullYear(), 6, 1);
        var endDate = new Date(today.getFullYear(), 6, 31);

        $("#example1").datepicker({
            appendText: "(yyyy-mm-dd)"
        });
        $('.muzika').on('click', function () {
            document.querySelector('.song').pause();
            $('.muzika-play').css({left: '20px'});
            $(this).css({left: "-70px"})
        });
        $('.muzika-play').on('click', function () {
            document.querySelector('.song').play();
            $('.muzika').css({left: '20px'});
            $(this).css({left: "-70px"})
        })
    </script>

    <script type="text/javascript">
        jQuery.ajax({
            url: 'https://www.googleapis.com/youtube/v3/activities?part=snippet%2CcontentDetails&channelId=UC5XVi7pp-Zrc6zuv8DmWCvQ&maxResults=25&key=AIzaSyByCSmc6KFyt_V3fivCFqtiJ6i3DmW5JX4',
            type: "GET",
            contentType: 'application/json; charset=utf-8',
            async: true,
            success: function (resultData) {
                $.each(resultData.items, function (key, value) {
                    var parent = '', className = '';
                    if (key + 1 > 3) {
                        className = 'item-hidden';
                    }
                    $('.chanal').append('<div class="col-sm-4 text-center chanal-item ' + className + '">' +
                        '<iframe width="350" src="https://www.youtube.com/embed/' + value.contentDetails.upload.videoId + '" frameborder="0" allowfullscreen></iframe>' +
                        '<h5>'/* + value.snippet.title */ +
                        '<small>' + value.snippet.title + '</small>' +
                        '</h5>' +
                        '</div>');
                });
                $('button[name="more"]').on('click', function () {
                    $.each($('.item-hidden'), function (key, value) {
                        if (key <= 2) {
                            $(this).removeClass('item-hidden')
                        }
                    })
                })
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.log(jqXHR, textStatus, errorThrown);
            }
        });
    </script>
