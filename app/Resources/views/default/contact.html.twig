{% extends 'base.html.twig' %}
{% block content %}
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Contact
                        <strong>us</strong>
                    </h2>
                    <hr>
                </div>
                <div class="col-md-6">

                    <p>Job Site and Interview Address:</p>
                    <p>Hi-Am Charity Foundation,</p>
                    <p class="text-capitalize">530 WEST STOCKER AVE, UNIT 307</p>
                    <p class="text-capitalize">GLENDALE CA 91202</p>
                <br>
                    <p>Glendale, CA 91202</p>
                    <p>Tel: 818-395-1969</p>
                    <p>Send Resume: by mail or e-mail at <a href="mailto:hiamfoundation@hotmail.com">hiamfoundation@hotmail.com</a> <a href="mailto:info@hiamfoundation.com">info@hiamfoundation.com</a></p>
                    <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->
                    {#<iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=37.0625,-95.677068&amp;spn=56.506174,79.013672&amp;t=m&amp;z=4&amp;output=embed"></iframe>#}
                </div>
                <div class="col-md-6 message-send">
                    <form role="form">
                        <div class="row">
                            <div class="form-group col-lg-4">
                                <label>Name</label>
                                <input type="text" name="name" required="required" class="form-control">
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Email Address</label>
                                <input type="email" name="email" class="form-control" required="required">
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Phone Number</label>
                                <input type="tel" name="tel" class="form-control">
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group col-lg-12">
                                <label>Message</label>
                                <textarea class="form-control" name="message" required="required" rows="6"></textarea>
                            </div>
                            <div class="form-group col-lg-12 text-center">
                                <div class="form-group col-md-6 check">
                                    <label>Message</label>
                                    <input class="form-control" required="required" name="check" type="number">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="hidden" name="save" value="contact">
                                    <button type="button" class="btn btn-info top-25">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var start = parseInt((Math.random() *10) +1), end = parseInt((Math.random()*10) +1), ecual = start + end;

        $('.check label').text(start + ' + ' + end + ' =');
        $('.top-25').on('click', function () {
            $.each($('input[required="required"]'), function (k, v) {
              if(v.value.length == ''){
                $(this).css({border: "1px solid red"});
              }else {
                  $(this).css({border: "1px solid #ccc"});
              }
            });

            if(parseInt($('input[name="check"]').val()) == ecual){
                var form = $('form').serialize();
                $('.message-send > form').css({display:'none'});
                $('.message-send').html('<p class="answer"> Dear '+ $('input[name="name"]').val() + ' thank you for your message. Our team will reply you as soon possible</p>' +
                    '<p><button type="button" class="btn btn-xs btn-warning" name="revert" onclick="revert()">Resend</button> ');
                console.log(form);
            }else {
                $('.check label').css({color:"red"});
                $('input[name="check"]').css({border: "1px solid red"});
            }
        })

        function revert() {
            location.reload();
        }
    </script>
    {% endblock %}